        // Tuning fork animation
        gsap.to(".tuning-fork", {duration: 0.2, rotate: 1, transformOrigin: "50% 100%", yoyo: true, repeat: -1});
        
        // Slow down sound wave animation
        gsap.to(".sound-wave path", {duration: 2, attr: {d: "M0,25 Q37.5,50 75,25 T150,25 T225,25 T300,25"}, yoyo: true, repeat: -1, ease: "sine.inOut"});

        // Molecule vibration
        gsap.to(".molecule circle:first-child", {duration: 0.5, scaleX: 1.1, scaleY: 0.9, transformOrigin: "50% 50%", yoyo: true, repeat: -1});

        // Speed up light wave animation
        gsap.to(".light-wave path", {duration: 0.5, attr: {d: "M0,25 Q37.5,50 75,25 T150,25 T225,25 T300,25"}, yoyo: true, repeat: -1, ease: "sine.inOut"});
        
        // Sequenced appearance of elements
        gsap.to(".wavelength", {duration: 1, opacity: 1, delay: 1});
        gsap.to(".frequency", {duration: 1, opacity: 1, delay: 2});
        gsap.to(".spectrum", {duration: 1, opacity: 1, delay: 3});
        gsap.to(".energy-scale", {duration: 1, opacity: 1, delay: 4});
